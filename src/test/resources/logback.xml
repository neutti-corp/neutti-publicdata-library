<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%highlight(%-5level) - NPA - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="com.neutti.npa" level="debug" />
    <root level="off">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
